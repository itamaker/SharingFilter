<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dk_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/shareText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:background="@drawable/edit_text_bg"
        android:gravity="left"
        android:hint="@string/share_hint"
        android:lines="5"
        android:padding="5dip"
        android:textColor="@color/light_blue"
        android:textColorHint="@color/dk_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shareText"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/shareAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="@string/share_all"
            android:textColor="@color/dk_gray" />

        <Button
            android:id="@+id/shareFiltered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="@string/share_filtered"
            android:textColor="@color/dk_gray" />
    </LinearLayout>

</RelativeLayout>